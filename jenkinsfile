pipeline{
    agent {
        docker { image 'maven:3.8.1-openjdk-8' }
    }
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages{
        stage("Code Checkout") {
         /*   agent {
                docker { image 'maven:3.8.1-openjdk-8' }
            } */
            steps {
                git branch: 'main', url: 'https://github.com/waldra/shopping-cart.git'
            }
        }

        stage("Compile") {
            steps {
                sh 'mvn clean test'
            }
        }

        stage("Code Quality Check") {
            steps {
                withSonarQubeEnv('sonarqube-server') {
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }
}