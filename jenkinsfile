pipeline{
    agent any

    stages{
        stage("Back-end") {
            agent {
                docker { image 'maven:3.8.1-openjdk-11' }
            }
            steps {
                sh 'mvn --version'
            }
        }
        stage("Front-end") {
            agent {
                docker { image 'node:16-alpine' }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}