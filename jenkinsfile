pipeline{
    agent {
        docker { image 'maven:3.8.1-openjdk-8' }
    }

    stages{
        stage("Code Checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/waldra/shopping-cart.git'
            }
        }
        stage("Compile") {
            steps {
                sh 'mvn clean test'
            }
        }
    }
}